<div class="intropage-header">
    <h1>{{fullname}}</h1>
</div>

<div class="intropage-content">
    <div class="intropage-main">
        <div class="intropage-title">
            <h2>Detalhes</h2>
        </div>
        <div class="intropage-summary">
            {{{summary}}}
        </div>
    </div>
    <div class="intropage-sidebar">

        <!-- Informações de inscrição -->
        <div class="intropage-info-item">
            <div class="intropage-icon-text mb-1">
                <i class="fa-solid fa-calendar-alt"></i>
                <strong>Inscrições:</strong>
            </div>

            <div class="d-flex flex-wrap justify-content-start align-items-start p-3">
                <div class="d-flex align-items-center" style="gap: 0.5rem; margin-right: 2em;">
                    <span class="text-muted mb-2">De:</span>
                    <strong class="h3">01/01/2024</strong>
                </div>
                <div class="d-flex align-items-center" style="gap: 0.5rem; margin-right: 2em;">
                    <span class="text-muted mb-2">Até:</span>
                    <strong class="h3">15/01/2024</strong>
                </div>
                <span class="text-muted small">GMT-04 (Horário Padrão do Amazonas)</span>
            </div>
        </div>

        <!-- Botão com URL externa -->
        <div class="intropage-button-collection">
            <a href="https://www.uems.br" class="intropage-button" target="_blank">
                <span>Acesse o Edital</span> <i class="fa-solid fa-newspaper"></i>
            </a>
            <a href="https://www.uems.br" class="intropage-button" target="_blank">
                <span>Inscreva-se</span><i class="fa-solid fa-right-from-bracket"></i>
            </a>
        </div>

        <!-- Categoria -->
        <div class="intropage-info-item">
            <div class="intropage-icon-text">
                <i class="fa-solid fa-cat"></i>
                <strong>Categoria:</strong>
            </div>
            <span>Extensão</span>
        </div>

        <!-- Público-alvo -->
        <div class="intropage-info-item">
            <div class="intropage-icon-text">
                <i class="fa-solid fa-users"></i>
                <strong>Público-Alvo:</strong>
            </div>
            <span>Professores da rede estadual de ensino</span>
        </div>
    </div>
</div>
